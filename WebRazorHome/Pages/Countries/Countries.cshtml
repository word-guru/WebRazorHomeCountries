@page
@model WebRazorHome.Pages.Countries.CountriesModel
@{
    ViewData["Title"] = "Countries of the world";
}

<h1>Countries</h1>

<div class="row">
    @foreach(var item in Model.Countries)
    {
        var photoPath = $"/images/{item.PhotoPath ?? "no image"}";

        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card-deck">
                <div class="card m-3 cardBoxShadow">
                    <div class="card-header text-center cardHeaderStyle">
                        <h3>@item.Name</h3>
                    </div>

                    <div class="text-centr cardBodyStyle">
                        <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
                    </div>

                    <div class="text-center cardCapitalStyle">
                       <h3>Столица:</h3>
                       <p>@item.Capital</p>
                    </div>

                    <div class="text-center cardPopulationStyle">
                        <h3>Население:</h3>
                        <p>@item.Population</p>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
